{
  "name": "@mizchi/wc-loader",
  "version": "0.1.0",
  "description": "Web Components loader for Luna SSR hydration",
  "type": "module",
  "main": "loader.js",
  "exports": {
    ".": "./loader.js",
    "./min": "./loader.min.js"
  },
  "files": [
    "loader.js",
    "loader.min.js"
  ],
  "scripts": {
    "minify": "terser src/loader.js --module --compress --mangle -o loader.min.js",
    "build": "cp src/loader.js loader.js && npm run minify"
  },
  "keywords": [
    "luna",
    "moonbit",
    "web-components",
    "ssr",
    "hydration"
  ],
  "author": "mizchi",
  "license": "MIT",
  "dependencies": {
    "@mizchi/wcssr": "workspace:*"
  }
}
